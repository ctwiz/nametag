<div class="container">
  <input type="hidden" id="follow_id" value="<%=@user.id%>">
  <h1><%=@user.handle%>'s domains</h1>
  
  <% if session[:user_id] %>
    <% @does_follow = @followers.select { |f| f.follower == session[:user_id] }.count  %>
    <% if @does_follow > 0 %>
      <% @follows = true %>
    <% else %>
      <% @follows = false %>
    <% end %>
  <% end %>

  <% if session[:user_id] %>
    <% unless @user.id == session[:user_id] %>
        <% if @follows == true %>
          <button class="user_follow btn btn-primary"><i class="icon-plus"></i> <span class="flw_txt"> unfollow</span></button>
        <% else %>
          <button class="user_follow btn"><i class="icon-plus"></i> <span class="flw_txt">follow</span></button>
        <% end %>
    <% end %>
  <% end %>
  <!-- show followers -->
  <%=render 'shared/listdomains' %> 
</div>
